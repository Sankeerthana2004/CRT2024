#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */ 
   int n,row,col,space;
    scanf("%d",&n);
    for(row=1;row<=n;row++)
    {
        for(space=1;space<=row-1;space++)
        {
            printf(" ");
        }
        for(col=1;col<=n-row+1;col++)
        {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
